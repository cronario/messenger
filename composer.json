{
  "name": "cronario/messenger",
  "description": "Send Messages like a Boss",
  "keywords": [
    "Cronario",
    "Messenger",
    "Message",
    "Worker",
    "Job",
    "Result",
    "Asynchronous",
    "Synchronous",
    "Async",
    "Sync",
    "Sms",
    "Hipchat",
    "Curl",
    "Whatsapp",
    "Mail"
  ],
  "homepage": "http://cronar.io",
  "license": "MIT",
  "authors": [
    {
      "name": "Gryaznov Vladislav",
      "email": "v.gryaznov@interkassa.com",
      "homepage": "https://interkassa.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "cronario/cronario": "0.1.*",
    "hipchat/hipchat-php": ">=1.0.0",
    "svyatov/curlwrapper": "~1.3",
    "alphasms": "1.0.0",
    "zf1/zend-mail": "~1.12"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "autoload": {
    "psr-4": {
      "Messenger\\": "src"
    },
    "classmap": ["vendor/alphasms/"]
  },
  "autoload-dev": {
    "psr-4": {
      "Messenger\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "pre-autoload-dump": [
      "php -r \"@rename('vendor/alphasms/smsclient.class.php', 'vendor/alphasms/SMSClient.php');\""
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.*-dev"
    }
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "alphasms",
        "version": "1.0.0",
        "dist": {
          "type": "zip",
          "url": "https://alphasms.ua/storage/files/alphasms-client-api.zip"
        }
      }
    }
  ]
}
